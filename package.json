{
  "name": "@fusion-io/blockchain",
  "version": "0.0.1-alpha.1",
  "description": "",
  "author": "Ross Sheppard <ross.sheppard@fusion.dev>",
  "keywords": [],
  "license": "ISC",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "benchmark": "babel-node ./benchmark.js",
    "build": "babel ./src --out-dir dist",
    "dev": "yarn redis && yarn dev:server",
    "dev:server": "yarn build && nodemon src/index.js",
    "redis": "redis-server --daemonize yes",
    "start": "node dist/index.js",
    "test": "jest --watchAll"
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "babel-jest": "^26.6.3",
    "express": "^4.17.1",
    "hex-to-binary": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6"
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "targets": { "node": "current" } }]
    ]
  },
  "nodemonConfig": {
    "exec": "yarn start",
    "ignore": [ "**/__tests__/**", "*.test.js", "*.spec.js" ] 
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["/node_modules", "/dist"]
  }
}
