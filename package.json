{
  "name": "@fusion-io/blockchain",
  "version": "0.0.1-alpha.1",
  "description": "",
  "author": "Ross Sheppard <ross.sheppard@fusion.dev>",
  "keywords": [],
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"yarn redis\" \"yarn dev:server\" \"yarn dev:peer\"",
    "dev:peer": "cross-env GENERATE_PEER_PORT='true' nodemon -r esm server/index.js",
    "dev:server": "nodemon -r esm server/index.js",
    "redis": "redis-server --daemonize yes",
    "test": "jest --watchAll"
  },
  "dependencies": {
    "elliptic": "^6.5.3",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "hex-to-binary": "^1.0.1",
    "node-fetch": "^2.6.1",
    "redis": "^3.0.2",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6"
  },
  "babel": {
    "presets": [["@babel/preset-env", { "targets": { "node": "current" }}]]
  },
  "nodemonConfig": {
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules",
      "/dist"
    ]
  }
}
